<!-- header-section start -->
<%- include('../partials/_top', {title:"Fleet Management", current_menu : {parent: 'Vehicles', child: 'Vehicles'} }) %>
<!-- header-section end -->

<div class="card card-primary m-3">
    <div class="card-header">
        <h3 class="card-title"><%= title %></h3>
    </div>
    
    <form method="post" action="<%='/comments/editSubmit/'+data._id %>">
    <div class="card-body">
        <div class="form-group">
            <label for="content">Content</label>
            <textarea type="text" class="form-control" rows='8' id="content" name="content"><%= data !== false ? data.content : '' %></textarea>
        </div>
    </div>
    

    <div class="card-footer">
        <% if(data!=false){ %>
            <input type="hidden" name="id" value="<%= data._id %>">
        <% } %>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    </form>
</div>


<%- include('../partials/_bottom') %>