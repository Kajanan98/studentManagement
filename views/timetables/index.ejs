<!-- header-section start -->
<%- include('../partials/_top', {title:"TimeTable", current_menu : {parent: 'TimeTables', child: 'View'} }) %>
<!-- header-section end -->

<div class="card card-primary m-3">
    <div class="card-header">
      <h3 class="card-title">Time Table </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Teacher</th>
            <% for (let i=1; i<9;i++) { %>
              <th>Period <%=i%></th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% teacherTimeTable.forEach( row => { %>
            <tr>
              <td><%= row.teacherInfo.name %></td>
              <% for (let i=1; i<9;i++) { %>
                <% let timeTable = row.timeTable.find(tt => tt.period===i) 
                %>
                <td><%= timeTable ? timeTable.title : '' %></td>
              <% } %>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->

<% data.forEach( classEle => { %>
  <div class="card card-primary m-3">
    <div class="card-header">
      <h3 class="card-title">Time Table of <%= classEle.title %></h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
      <table id="example1" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th style="width: 40px">Period</th>
            <th>Teacher</th>
            <th>Subject / Lesson</th>
          </tr>
        </thead>
        <tbody>
          <% classEle.timeTable.forEach( row => { %>
            <tr data-id="<%= row.id %>">
              <td><%= row.period %></td>
              <td><%= row.teacherInfo.name %></td>
              <td><%= row.subject %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->
<% }); %>

