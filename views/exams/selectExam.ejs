<!-- header-section start -->
<%- include('../partials/_top', {title:"Exams", current_menu : {parent: 'Exams', child} }) %>
<!-- header-section end -->

<div class="card card-primary m-3">
    <div class="card-header">
      <h3 class="card-title">Exams</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
      <table id="example1" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th style="width: 40px">#</th>
            <th>Date</th>
            <th>Time</th>
            <th>Subject</th>
            <th>Class</th>
            <th>Status</th>
            <th style="width: 120px" class="text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <% var count = 1; %>
          <% data.forEach( row => { %>
            <tr data-id="<%= row.id %>">
              <td><%= count++ %></td>
              <td><%= moment(new Date(row.date)).format("MM-DD-YYYY") %></td>
              <td><%= moment(new Date(row.date)).format("hh:mm") %></td>
              <td><%= row.subject %></td>
              <td><%= row._class[0] ? row._class[0].title : '' %></td>
              <td><%= row.isFinished ? 'Finished' : 'Not Finished' %></td>
              <td class="text-center">
                <a href="<%= link %><%= row._id %>"><i class="fas fa-arrow-right"></i></a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->

<%- include('../partials/_bottom') %>

