<!-- header-section start -->
<%- include('../partials/_top', {title:"Edit Profile", current_menu : {parent: 'Profile', child: 'Edit Profile'} }) %>
<!-- header-section end -->

<div class="card card-primary m-3">
    <div class="card-header">
        <h3 class="card-title"><%= title %></h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form method="post" action="/users/profile/editSubmit">
    <div class="card-body">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name" value="<%= data !== false ? data.name : '' %>" required>
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" class="form-control" id="address" name="address" placeholder="Enter Address" value="<%= data !== false ? data.address : '' %>">
        </div>
        <div class="form-group">
            <label for="mobilenumber">Mobile Number</label>
            <input type="text" class="form-control" id="mobilenumber" name="mobile_number" placeholder="Mobile Number" value="<%= data !== false ? data.mobile : '' %>">
        </div>
        <div class="form-group">
            <label for="nic">NIC</label>
            <input type="text" class="form-control" id="nic" name="nic" placeholder="Enter NIC" value="<%= data !== false ? data.NIC : '' %>" required>
        </div>
        
        
        <!-- <div class="form-group">
            <label for="remarks">Remarks</label>
            <textarea class="form-control" id="remarks" name="remarks" placeholder="Enter shot info"><%= data !== false ? data.remarks : '' %></textarea>
        </div>
        <div class="form-group">
            <label for="exampleInputFile">Image</label>
            <div class="input-group">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="exampleInputFile">
                    <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                </div>
                <div class="input-group-append">
                </div>
            </div>
        </div> -->
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <% if(data!=false){ %>
            <input type="hidden" name="username" value="<%= data.username %>">
        <% } %>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    </form>
</div>
<!-- /.card -->

<%- include('../partials/_bottom') %>