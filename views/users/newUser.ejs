<!-- header-section start -->
<%- include('../partials/_top', {title:"Manage User", current_menu : {parent: 'Users', child } }) %>
<!-- header-section end -->

<div class="card card-primary m-3">
    <div class="card-header">
        <h3 class="card-title"><%= title %></h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form method="post" action="<%=(data == false ) ? '/users/newUser/new' : '/users/editUser/editSubmit/'+data._id %>">
    <div class="card-body">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name" value="<%= data !== false ? data.name : '' %>" required>
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" class="form-control" id="address" name="address" placeholder="Enter Address" value="<%= data !== false ? data.address : '' %>">
        </div>
        <div class="form-group">
            <label for="mobilenumber">Mobile Number</label>
            <input type="text" class="form-control" id="mobilenumber" name="mobile_number" placeholder="Mobile Number" value="<%= data !== false ? data.mobile : '' %>">
        </div>
        <div class="form-group">
            <label for="nic">NIC</label>
            <input type="text" class="form-control" id="nic" name="nic" placeholder="Enter NIC" value="<%= data !== false ? data.NIC : '' %>" required>
        </div>
        <% if(data==false){ %>
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" id="username" name="user_name" placeholder="Enter User Name" value="<%= data !== false ? data.username : '' %>" required>
        </div>
        <% } %>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Password" value="<%= data !== false ? data.password : '' %>" required>
        </div>
        <input type="hidden" name="type" value="<%= userType %>">
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <% if(data!=false){ %>
            <input type="hidden" name="id" value="<%= data._id %>">
        <% } %>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    </form>
</div>
<!-- /.card -->

<%- include('../partials/_bottom') %>