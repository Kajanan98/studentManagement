<!-- header-section start -->
<%- include('../partials/_top', {title:title, current_menu : {parent: 'Users', child: 'List'} }) %>
<!-- header-section end -->
<section class="content">
<div class="container-fluid">
  <% if(principal){ %> 
  <h5 class="mb-2 mt-4"> </h5>
  <div class="row">
    <div class="col-lg-3 col-6 mx-auto">
      <!-- Profile Image -->
      <div class="card card-primary card-outline">
        <div class="card-body box-profile">
          <h3 class="profile-username text-center"><%= principal.name %></h3>

          <p class="text-muted text-center"><%= principal.username %></p>

          <ul class="list-group list-group-unbordered mb-3">
            <li class="list-group-item">
              <b>Address</b> <a class="float-right"><%= principal.address %></a>
            </li>
            <li class="list-group-item">
              <b>Mobile</b> <a class="float-right"><%= principal.mobile %></a>
            </li>
            <li class="list-group-item">
              <b>NIC</b> <a class="float-right"><%= principal.NIC %></a>
            </li>
          </ul>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
  </div>
<% } %> 
<% if(teachers){ %> 

    <div class="row">
      <% teachers.forEach( item => { %>
        <div class="col-lg-3 col-6">
          <!-- Profile Image -->
          <div class="card card-primary card-outline">
            <div class="card-body box-profile">
              <h3 class="profile-username text-center"><%= item.name %></h3>
              <p class="text-muted text-center"><%= item.username %></p>
              <ul class="list-group list-group-unbordered mb-3">
                <li class="list-group-item">
                  <b>Address</b> <a class="float-right"><%= item.address %></a>
                </li>
                <li class="list-group-item">
                  <b>Mobile</b> <a class="float-right"><%= item.mobile %></a>
                </li>
                <li class="list-group-item">
                  <b>NIC</b> <a class="float-right"><%= item.NIC %></a>
                </li>
              </ul>
              
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
      <% }) %>
    </div>
 
    <% } %> 

    <% if(students){ %> 

      <div class="row">
        <% students.forEach( item => { %>
          <div class="col-lg-3 col-6">
            <!-- Profile Image -->
            <div class="card card-primary card-outline">
              <div class="card-body box-profile">
                <h3 class="profile-username text-center"><%= item.name %></h3>
                <p class="text-muted text-center"><%= item.username %></p>
                <ul class="list-group list-group-unbordered mb-3">
                  <li class="list-group-item">
                    <b>Address</b> <a class="float-right"><%= item.address %></a>
                  </li>
                  <li class="list-group-item">
                    <b>Mobile</b> <a class="float-right"><%= item.mobile %></a>
                  </li>
                  <li class="list-group-item">
                    <b>NIC</b> <a class="float-right"><%= item.NIC %></a>
                  </li>
                </ul>
                
                  <a href="/users/viewStudent/<%= item._id %>" class="btn btn-primary btn-block"><b>View</b></a>
                
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        <% }) %>
      </div>
   
      <% } %> 

      <% if(parents){ %> 

        <div class="row">
          <% parents.forEach( item => { %>
            <div class="col-lg-3 col-6">
              <!-- Profile Image -->
              <div class="card card-primary card-outline">
                <div class="card-body box-profile">
                  <h3 class="profile-username text-center"><%= item.name %></h3>
                  <p class="text-muted text-center"><%= item.username %></p>
                  <ul class="list-group list-group-unbordered mb-3">
                    <li class="list-group-item">
                      <b>Address</b> <a class="float-right"><%= item.address %></a>
                    </li>
                    <li class="list-group-item">
                      <b>Mobile</b> <a class="float-right"><%= item.mobile %></a>
                    </li>
                    <li class="list-group-item">
                      <b>NIC</b> <a class="float-right"><%= item.NIC %></a>
                    </li>
                  </ul>
                  
                    
                  
                </div>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
            </div>
          <% }) %>
        </div>
     
        <% } %> 
</div>
</section>

<%- include('../partials/_bottom') %>