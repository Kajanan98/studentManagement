<%- include('../partials/_top', { title:"Manage Notices", current_menu : {parent: 'Notices', child: 'Manage'} }) %>

<section class="content">
  <div class="container-fluid">
  <div class="card-columns">
    <%= data.length == 0 ? "No notices" : "" %>
      <% data.forEach(function(datas){%>
      <div class="card p-3">
        <blockquote class="blockquote mb-0 card-body">
          <p><%= datas.content %></p>
          <footer class="blockquote-footer">
            <small class="text-muted">
              <%= moment(datas.date).format("DD MMM YYYY hh:mm") %>
            </small>
          </footer>
          <div class="card-footer text-right">
              <a href="/notices/delete/<%= datas._id %>"><small ><i class="fa fa-trash" aria-hidden="true"></i></small></a>&nbsp&nbsp&nbsp
              <a href="/notices/editSubmit/<%= datas._id %>"><small ><i class="fa fa-edit" aria-hidden="true"></i></small></a>
          </div>
        </blockquote>
      </div>
      <% }) %> 
  </div>
  
  <% if (pages > 0) { %>
    <ul class="pagination justify-content-center">
      <% if (current == 1) { %>
        <li class="page-item disabled">
          <a class="page-link" href="#" >First</a>
        </li>
      <% } else { %>
        <li class="page-item ">
          <a class="page-link" href="/notices/1" >First</a>
        </li>
      <% } %>
      <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
      <% if (i !== 1) { %>
        <li class="page-item disabled">
          <a class="page-link" href="#" >...</a>
        </li>
      <% } %>
      <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
            <li class=" page-item active"><a class="page-link"><%= i %></a></li>
        <% } else { %>
            <li class="page-item"><a class="page-link" href="/notices/<%= i %>"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
            <li  class="page-item disabled" ><a class="page-link">...</a></li>
        <% } %>
        <% } %>
        <% if (current == pages) { %>
          <li  class="page-item disabled"><a class="page-link">Last</a></li>
        <% } else { %>
          <li class="page-item"><a class="page-link" href="/notices/<%= pages %>">Last</a></li>
        <% } %>
      
    </ul>


  <% } %>
  </div>
  </section>
    

<%- include('../partials/_bottom') %>