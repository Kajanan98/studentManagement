<%- include('../partials/_top', {title:"Fleet Management", current_menu : {parent: 'Vehicles', child: 'Vehicles'} }) %>

<div class="card-columns">
    <% data.forEach(function(datas){%>
    <div class="card p-3">
      <blockquote class="blockquote mb-0 card-body">
        <p><%= datas.content %></p>
        <footer class="blockquote-footer">
          <small class="text-muted">
            <%= datas.author %> 
            
          </small>
        </footer>
        <footer class="blockquote-footer">
            <small class="text-muted">
                <%= datas.date %>
              
            </small>
          </footer>
        <div class="card-footer text-right">
            <a href="#"><small ><i class="fa fa-trash" aria-hidden="true"></i></small></a>&nbsp&nbsp&nbsp
            <a href="/notices/editNotice/editSubmit"><small ><i class="fa fa-edit" aria-hidden="true"></i></small></a>
        </div>
      </blockquote>
    </div>
    <% }) %> 
</div>




<% if (pages > 0) { %>
  <ul class="pagination justify-content-center">
    <% if (current == 1) { %>
      <li class="page-item disabled">
        <a class="page-link" href="#" >First</a>
      </li>
    <% } else { %>
      <li class="page-item ">
        <a class="page-link" href="/admin/viewNotice/1" >First</a>
      </li>
    <% } %>
    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
    <% if (i !== 1) { %>
      <li class="page-item disabled">
        <a class="page-link" href="#" >...</a>
      </li>
    <% } %>
    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
      <% if (i == current) { %>
          <li class=" page-item active"><a class="page-link"><%= i %></a></li>
      <% } else { %>
          <li class="page-item"><a class="page-link" href="/admin/viewNotice/<%= i %>"><%= i %></a></li>
      <% } %>
      <% if (i == Number(current) + 4 && i < pages) { %>
          <li  class="page-item disabled" ><a class="page-link">...</a></li>
      <% } %>
      <% } %>
      <% if (current == pages) { %>
        <li  class="page-item disabled"><a class="page-link">Last</a></li>
      <% } else { %>
        <li class="page-item"><a class="page-link" href="/admin/viewNotice/<%= pages %>">Last</a></li>
      <% } %>
    
  </ul>


<% } %>

    

