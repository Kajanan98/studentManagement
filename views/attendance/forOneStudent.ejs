<!-- header-section start -->
<%- include('../partials/_top', {title:"Attendances", current_menu : {parent: 'Attendance', child: 'View'} }) %>
<!-- header-section end -->
<style>
  @media print {
    .card.card-primary {
      font-family:georgia, times, serif;
    }
    .main-footer, .card-footer {
      display: none;
    }
  }
</style>
<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="card card-primary card-outline">
      <div class="card-header">
        Attendances
      </div>
      <div class="card-body">
        <div class="timeline timeline-inverse">
          <% attendances.forEach( attendance => { %>
            <!-- timeline time label -->
            <div class="time-label">
              <span class="bg-<%= attendance.attendance?"success":"danger" %>">
                <%= moment(attendance.date).format("MM DD YYYY") %>
              </span>
            </div>
            <!-- /.timeline-label -->
            <!-- timeline item -->
            <div>
              <i class="fas <%= attendance.attendance?"fa-check":"fa-times" %> bg-primary"></i>

              <div class="timeline-item">
                <div class="timeline-body">
                  Attendance - <%= attendance.attendance?'Present':'Absent' %>
                </div>
              </div>
            </div>
            <!-- END timeline item -->
          <% }) %>
          <div>
            <i class="far fa-clock bg-gray"></i>
          </div>
        </div>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<%- include('../partials/_bottom') %>