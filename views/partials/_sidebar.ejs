<!-- defining menus-->
<%
  if(typeof current_menu == 'undefined')current_menu={parent:'', child: ''};
 %>
<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">

    <a href="/" style="width: 100%;">
        <img src="/images/DP.png" alt="School Logo" class="brand-image" style="width: 100%;">
    </a>


    <div class="sidebar">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar-new">
            <!-- Sidebar user panel (optional) -->
            <!-- SidebarSearch Form -->
            <div class="form-inline">
                <div class="input-group" data-widget="sidebar-search">
                    <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-sidebar">
                            <i class="fas fa-search fa-fw"></i>
                        </button>
                    </div>
                </div>
            </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
                         with font-awesome or any other icon font library -->
                        <% menus.forEach( menu => { %>

                            <li class="nav-item <%= (menu.title===current_menu.parent)?'menu-open':'' %>">
                                <a href="<%= menu.href %>" class="nav-link <%= (menu.title===current_menu.parent)?'active':'' %>">
                                    <i class="nav-icon <%= menu.icon %>"></i>
                                    <p>
                                        <%= menu.title %>
                                        <% if(menu.children){ %>
                                            <i class="right fas fa-angle-left"></i>
                                        <% } %>
                                    </p>
                                </a>
                                <% if(menu.children){ %>
                                    <ul class="nav nav-treeview">
                                        <% menu.children.forEach( child => { %>
                                            <li class="nav-item">
                                                <a href="<%= child.href %>" class="nav-link <%= (menu.title===current_menu.parent&&child.title===current_menu.child)?'active':'' %>">
                                                    <i class="nav-icon <%= child.icon %>"></i>
                                                    <p><%= child.title %></p>
                                                </a>
                                            </li>
                                        <% }) %>
                                    </ul>
                                <% } %>
                            </li>
                        <% }) %>
                    <li class="nav-item">
                        <a href="/logout" class="nav-link">
                           <i class="fas fa-sign-out-alt"></i>
                            <p>
                                Log out
                            </p>
                        </a>
                    </li>

          <li class="nav-item">
            <a href="users/faq" class="nav-link">
                <i class="fa fa-question-circle" aria-hidden="true"></i>
              <p>
                Help
              </p>
            </a>
          </li>
            </nav>
      </ul>
    </nav>
    <!-- /.sidebar-menu -->
  </div>
    </div>
    <!-- /.sidebar -->

</aside>
